# Cluster shape
KUBE_CP_COUNT=1
KUBE_WORKER_COUNT=2

# Provider: libvirt or virtualbox
KUBE_PROVIDER=libvirt
# Optional libvirt CPU profile overrides (helps avoid XML CPU vendor/model mismatches)
KUBE_LIBVIRT_CPU_MODE=custom
KUBE_LIBVIRT_CPU_MODEL=qemu64

# VM sizing
KUBE_CP_CPUS=2
KUBE_CP_MEMORY=2048
KUBE_WORKER_CPUS=1
KUBE_WORKER_MEMORY=1536

# Networking
KUBE_NETWORK_PREFIX=10.31.0
KUBE_POD_CIDR=10.244.0.0/16
KUBE_SERVICE_CIDR=10.96.0.0/12

# API endpoint load balancer for multi-control-plane clusters
KUBE_API_LB_ENABLED=true
KUBE_API_LB_IP=10.31.0.5
KUBE_API_LB_HOSTNAME=k8s-api.local
KUBE_API_LB_CPUS=1
KUBE_API_LB_MEMORY=512

# Kubernetes versions (Debian package version format)
KUBE_CHANNEL=v1.30
KUBE_VERSION=1.30.6-1.1

# CNI options: flannel, calico, cilium
KUBE_CNI=flannel
KUBE_CNI_MANIFEST_FLANNEL=https://github.com/flannel-io/flannel/releases/download/v0.26.3/kube-flannel.yml
KUBE_CNI_MANIFEST_CALICO=https://raw.githubusercontent.com/projectcalico/calico/v3.29.0/manifests/calico.yaml
KUBE_CNI_MANIFEST_CILIUM=https://raw.githubusercontent.com/cilium/cilium/v1.16.5/install/kubernetes/quick-install.yaml
KUBE_PAUSE_IMAGE=registry.k8s.io/pause:3.9

# Advanced behavior tuning (optional)
# KUBE_JOIN_MAX_WAIT_SECONDS=900
# KUBE_JOIN_POLL_SECONDS=5
# KUBE_CP1_INIT_TIMEOUT_SECONDS=1800
# KUBE_CP1_PREPULL_IMAGES=true
# KUBE_CP1_PREPULL_TIMEOUT_SECONDS=1200
# KUBE_CP1_PROGRESS_INTERVAL_SECONDS=20
# KUBE_CP_JOIN_WARN_SHOW_LIMIT=2
# KUBE_CP_JOIN_WARN_REPORT_INTERVAL_SECONDS=120
# KUBE_CP_JOIN_WARN_REPORT_EVERY=250
# KUBE_CP_JOIN_RETRY_ATTEMPTS=5
# KUBE_CP_JOIN_RETRY_SLEEP_SECONDS=15
# KUBE_CP_JOIN_RETRY_BACKOFF_FACTOR=2
# KUBE_CP_JOIN_RETRY_MAX_SLEEP_SECONDS=90
# KUBE_CP_JOIN_RETRY_MAX_TOTAL_SECONDS=1200
# KUBE_CP_STABILIZE_TIMEOUT_SECONDS=600
# KUBE_CP_STABILIZE_POLL_SECONDS=5
# KUBE_VALIDATE_READY_TIMEOUT_SECONDS=300
# KUBE_VALIDATE_READY_POLL_SECONDS=5
# KUBE_VAGRANT_RETRY_ATTEMPTS=10
# KUBE_VAGRANT_RETRY_SLEEP_SECONDS=15
# KUBE_VAGRANT_RETRY_BACKOFF_FACTOR=2
# KUBE_VAGRANT_RETRY_MAX_SLEEP_SECONDS=120
# KUBE_VAGRANT_RETRY_MAX_TOTAL_SECONDS=1200
# KUBE_WORKER_PARALLELISM=2
# KUBE_APT_LOCK_TIMEOUT_SECONDS=300
# KUBE_APT_LOCK_POLL_SECONDS=3

# Guest OS image
KUBE_BOX=ffreis/k8s-base-ubuntu24
KUBE_BOX_VERSION=
KUBE_CONTAINERD_VERSION=1.7.28-0ubuntu1~24.04.2
KUBE_HAPROXY_VERSION=2.8.16-0ubuntu0.24.04.1
# Optional apt proxy (for apt-cacher-ng), e.g. http://192.168.121.1:3142
KUBE_APT_PROXY=

# Optional ssh public key copied to vagrant user in guests
KUBE_SSH_PUBKEY=
